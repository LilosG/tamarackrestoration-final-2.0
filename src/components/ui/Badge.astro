---
/**
 * Badge Component
 * ===============
 * Small status indicators and labels
 */

import type { HTMLAttributes } from 'astro/types';
import type { BadgeVariant } from '@/types';

interface Props extends HTMLAttributes<'span'> {
  variant?: BadgeVariant;
  size?: 'sm' | 'md';
  pulse?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  pulse = false,
  class: className,
  ...attrs
} = Astro.props;

const baseStyles = 'inline-flex items-center gap-1 font-semibold rounded-full';

const variantStyles: Record<BadgeVariant, string> = {
  primary: 'bg-brand-orange-100 text-brand-orange-700',
  secondary: 'bg-brand-cream-300 text-brand-gray',
  success: 'bg-success-50 text-success-700',
  warning: 'bg-warning-50 text-warning-700',
  error: 'bg-error-50 text-error-700',
};

const sizeStyles: Record<string, string> = {
  sm: 'px-2 py-0.5 text-body-xs',
  md: 'px-3 py-1 text-body-sm',
};

const pulseStyles = pulse ? 'animate-pulse-soft' : '';

const classes = [
  baseStyles,
  variantStyles[variant],
  sizeStyles[size],
  pulseStyles,
  className,
].filter(Boolean).join(' ');
---

<span class={classes} {...attrs}>
  <slot />
</span>
