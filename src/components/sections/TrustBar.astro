---
/**
 * TrustBar Component
 * ==================
 * Horizontal bar displaying trust metrics and credibility indicators
 */

import Icon from '@/components/ui/Icon.astro';
import { trustMetrics } from '@/data/site';

interface Props {
  class?: string;
  variant?: 'default' | 'dark' | 'light';
}

const { class: className, variant = 'default' } = Astro.props;

const variantStyles: Record<string, { bg: string; text: string; accent: string }> = {
  default: {
    bg: 'bg-white',
    text: 'text-brand-black',
    accent: 'text-brand-orange',
  },
  dark: {
    bg: 'bg-brand-black',
    text: 'text-white',
    accent: 'text-brand-orange',
  },
  light: {
    bg: 'bg-brand-cream-200',
    text: 'text-brand-black',
    accent: 'text-brand-orange',
  },
};

const styles = variantStyles[variant] ?? variantStyles.default;
---

<section class:list={['trust-bar py-6 md:py-8', styles.bg, className]}>
  <div class="container">
    <div class="flex flex-wrap items-center justify-center gap-6 md:gap-8 lg:gap-12">
      {trustMetrics.map((metric) => (
        <div class="flex items-center gap-3">
          <div class:list={['flex-shrink-0', styles.accent]}>
            <Icon name={metric.icon} size="lg" />
          </div>
          <div>
            <div class:list={['font-display text-2xl md:text-3xl leading-none', styles.text]}>
              {metric.value}
            </div>
            <div class:list={['text-body-sm', variant === 'dark' ? 'text-brand-cream-400' : 'text-brand-gray']}>
              {metric.label}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
