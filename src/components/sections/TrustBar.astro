---
/**
 * TrustBar Component
 * ==================
 * Horizontal bar displaying trust metrics and credibility indicators
 */

import Icon from '@/components/ui/Icon.astro';
import { trustMetrics } from '@/data/site';

interface Props {
  class?: string;
  variant?: 'default' | 'dark' | 'light';
}

const { class: className, variant = 'default' } = Astro.props;

// Determine classes based on variant - inline to avoid TypeScript lookup issues
const bgClass = variant === 'dark' ? 'bg-brand-black' : variant === 'light' ? 'bg-brand-cream-200' : 'bg-white';
const textClass = variant === 'dark' ? 'text-white' : 'text-brand-black';
const accentClass = 'text-brand-orange';
const labelClass = variant === 'dark' ? 'text-brand-cream-400' : 'text-brand-gray';
---

<section class:list={['trust-bar py-6 md:py-8', bgClass, className]}>
  <div class="container">
    <div class="flex flex-wrap items-center justify-center gap-6 md:gap-8 lg:gap-12">
      {trustMetrics.map((metric) => (
        <div class="flex items-center gap-3">
          <div class:list={['flex-shrink-0', accentClass]}>
            <Icon name={metric.icon} size="lg" />
          </div>
          <div>
            <div class:list={['font-display text-2xl md:text-3xl leading-none', textClass]}>
              {metric.value}
            </div>
            <div class:list={['text-body-sm', labelClass]}>
              {metric.label}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
