---
/**
 * Homepage
 * ========
 * Main landing page for Tamarack Restoration
 * Conversion-optimized layout with trust signals
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/sections/Hero.astro';
import TrustBar from '@/components/sections/TrustBar.astro';
import ServicesGrid from '@/components/sections/ServicesGrid.astro';
import ProcessSteps from '@/components/sections/ProcessSteps.astro';
import WhyChooseUs from '@/components/sections/WhyChooseUs.astro';
import Certifications from '@/components/sections/Certifications.astro';
import Testimonials from '@/components/sections/Testimonials.astro';
import ServiceAreas from '@/components/sections/ServiceAreas.astro';
import FAQ from '@/components/sections/FAQ.astro';
import CTABanner from '@/components/sections/CTABanner.astro';
import { business } from '@/data/site';
import { getHomeTitle } from '@/utils/seo';

const seoTitle = getHomeTitle();
const seoDescription = `24/7 emergency restoration in Carlsbad & North San Diego County. Water damage, mold removal, fire restoration. ${business.yearsInBusiness}+ years experience, ${business.reviewCount} five-star reviews. Call ${business.phoneFormatted} for 60-minute response.`;
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
>
  <!-- Hero Section with Lead Form -->
  <Hero 
    backgroundImage="/images/hero/truck-side-profile.jpg"
    title="Emergency Water, Fire & Mold Restoration in"
    titleAccent="Carlsbad"
    subtitle="Fast, professional restoration services when disaster strikes. We respond within 60 minutes, 24/7, to protect your home and family."
  />
  
  <!-- Trust Bar - Social Proof Strip -->
  <TrustBar variant="light" />
  
  <!-- Services Grid -->
  <section id="services">
    <ServicesGrid 
      title="Emergency Restoration Services"
      subtitle="Professional restoration for water damage, fire damage, mold, and more. Available 24/7 throughout North San Diego County."
      limit={6}
    />
  </section>
  
  <!-- Process Steps - How We Work -->
  <ProcessSteps 
    title="Our Proven Restoration Process"
    subtitle="A systematic approach to restore your property quickly and completely"
    variant="numbered"
  />
  
  <!-- Certifications with Team Photo -->
  <Certifications 
    showTeamPhoto={true}
    class="bg-brand-cream-200"
  />
  
  <!-- Why Choose Us -->
  <WhyChooseUs 
    variant="horizontal"
    showImage={true}
  />
  
  
  <!-- Testimonials Section -->
  <Testimonials 
    limit={3}
    class="bg-brand-cream-200"
  />
  
  <!-- Service Areas with Map -->
  <ServiceAreas 
    showMap={true}
  />
  
  <!-- Insurance Partners Banner -->
  <section class="insurance-partners section bg-brand-cream-200">
    <div class="container">
      <div class="text-center max-w-3xl mx-auto mb-8">
        <h2 class="font-heading text-2xl md:text-3xl font-bold text-brand-black mb-3">
          We Work With All Major Insurance Carriers
        </h2>
        <p class="text-body-lg text-brand-gray">
          We handle the paperwork and work directly with your insurance company to make the claims process as smooth as possible.
        </p>
      </div>
      
      <!-- Insurance logos would go here -->
      <div class="flex flex-wrap items-center justify-center gap-8 lg:gap-12 opacity-60">
        <span class="text-brand-gray font-medium">State Farm</span>
        <span class="text-brand-gray font-medium">USAA</span>
        <span class="text-brand-gray font-medium">Allstate</span>
        <span class="text-brand-gray font-medium">Farmers</span>
        <span class="text-brand-gray font-medium">Liberty Mutual</span>
        <span class="text-brand-gray font-medium">AAA</span>
      </div>
      
      <div class="text-center mt-6">
        <a href="/insurance/" class="text-brand-orange font-semibold hover:text-brand-orange-700 transition-colors inline-flex items-center gap-1">
          Learn About Insurance Claims
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
  
  <!-- FAQ Section -->
  <FAQ 
    title="Frequently Asked Questions"
    subtitle="Get answers to common questions about our restoration services"
    limit={5}
  />
  
