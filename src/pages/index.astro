---
/**
 * Homepage
 * ========
 * Main landing page for Tamarack Restoration
 * Conversion-optimized layout with trust signals
 * 
 * BACKGROUND PATTERN (strict alternation):
 * Hero (black) → TrustBar (cream) → Services (white) → Process (cream)
 * → Certifications (white) → RealResults (cream) → Projects (white)
 * → WhyChoose (cream) → Testimonials (white) → ServiceAreas (cream)
 * → Insurance (white) → FAQ (cream) → CTA (black)
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/sections/Hero.astro';
import TrustBar from '@/components/sections/TrustBar.astro';
import ServicesGrid from '@/components/sections/ServicesGrid.astro';
import ProcessSteps from '@/components/sections/ProcessSteps.astro';
import WhyChooseUs from '@/components/sections/WhyChooseUs.astro';
import Certifications from '@/components/sections/Certifications.astro';
import RealResults from '@/components/sections/RealResults.astro';
import ProjectsSection from '@/components/sections/ProjectsSection.astro';
import Testimonials from '@/components/sections/Testimonials.astro';
import ServiceAreas from '@/components/sections/ServiceAreas.astro';
import InsurancePartners from '@/components/sections/InsurancePartners.astro';
import FAQ from '@/components/sections/FAQ.astro';
import CTABanner from '@/components/sections/CTABanner.astro';
import { business } from '@/data/site';
import { getHomeTitle } from '@/utils/seo';

const seoTitle = getHomeTitle();
const seoDescription = `24/7 emergency restoration in Carlsbad & North San Diego County. Water damage, mold removal, fire restoration. ${business.yearsInBusiness}+ years experience, ${business.reviewCount} five-star reviews. Call ${business.phoneFormatted} for 60-minute response.`;
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
>
  <!-- Hero Section with Lead Form (BLACK) -->
  <Hero 
    backgroundImage="/images/hero/truck-hero.webp"
    title="Emergency Water, Fire & Mold Restoration in"
    titleAccent="Carlsbad"
    subtitle="Fast, professional restoration services when disaster strikes. We respond within 60 minutes, 24/7, to protect your home and family."
  />
  
  <!-- Trust Bar - Social Proof Strip (CREAM) -->
  <TrustBar variant="light" />
  
  <!-- Services Grid (WHITE) -->
  <ServicesGrid 
    title="Emergency Restoration Services"
    subtitle="Professional restoration for water damage, fire damage, mold, and more. Available 24/7 throughout North San Diego County."
    limit={6}
    class="bg-white"
  />
  
  <!-- Process Steps - How We Work (CREAM) -->
  <ProcessSteps 
    title="Our Proven Restoration Process"
    subtitle="A systematic approach to restore your property quickly and completely"
    variant="numbered"
    class="bg-brand-cream-200"
  />
  
  <!-- Certifications with Team Photo (WHITE) -->
  <Certifications 
    showTeamPhoto={true}
    class="bg-white"
  />
  
  <!-- Real Results - Project Showcase (CREAM) -->
  <RealResults 
    title="Real Results for Carlsbad Homes & Businesses"
    subtitle="See how we've helped your neighbors recover from water damage, fire, mold, and more."
    class="bg-brand-cream-200"
  />
  
  <!-- Featured Projects Gallery (WHITE) -->
  <ProjectsSection
    title="Recent Restoration Projects"
    subtitle="Real before-and-after results from homes across North San Diego County. Hover to see the before photos."
    featured={true}
    limit={3}
    class="bg-white"
  />

  <!-- Why Choose Us (CREAM) -->
  <WhyChooseUs
    variant="horizontal"
    showImage={true}
    class="bg-brand-cream-200"
  />
  
  <!-- Testimonials Section (WHITE) -->
  <Testimonials
    limit={3}
    class="bg-white"
  />

  <!-- Service Areas with Map (CREAM) -->
  <ServiceAreas
    showMap={true}
    class="bg-brand-cream-200"
  />

  <!-- Insurance Partners (WHITE) -->
  <InsurancePartners
    class="bg-white"
  />

  <!-- FAQ Section (CREAM) -->
  <FAQ
    title="Frequently Asked Questions"
    subtitle="Get answers to common questions about our restoration services"
    limit={5}
    class="bg-brand-cream-200"
  />
  
  <!-- Final CTA (BLACK) -->
  <CTABanner variant="emergency" />
</BaseLayout>
