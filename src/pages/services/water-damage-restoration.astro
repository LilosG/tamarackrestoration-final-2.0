---
/**
 * Water Damage Restoration - Service Pillar Page
 * ===============================================
 * Uses ServicePillarLayout template with service-specific content
 */

import ServicePillarLayout from '@/layouts/ServicePillarLayout.astro';
import Icon from '@/components/ui/Icon.astro';
import type { FAQ } from '@/types';

const serviceSlug = 'water-damage-restoration';

const metaDescription = 'Professional water damage restoration in North San Diego County. 24/7 emergency response, 60-minute arrival. Water extraction, structural drying, mold prevention. Call (760) 500-2211.';

const faqs: FAQ[] = [
  {
    question: 'How quickly should I call for water damage restoration?',
    answer: 'Call immediately. Water damage worsens rapidly—within 24-48 hours, mold can begin to grow. The faster you act, the more you can save. We offer 24/7 emergency service with 60-minute response times.',
  },
  {
    question: 'What causes water damage in homes?',
    answer: 'Common causes include burst pipes, water heater failures, appliance malfunctions, roof leaks, sewage backups, flooding from storms, and HVAC condensation issues.',
  },
  {
    question: 'Will my insurance cover water damage restoration?',
    answer: 'Most homeowner\'s insurance covers sudden and accidental water damage like burst pipes. Gradual damage or flood damage may require separate coverage. We work with all major carriers and help document your claim.',
  },
  {
    question: 'How long does water damage restoration take?',
    answer: 'Minor damage: 3-5 days. Extensive damage affecting multiple rooms: 1-2 weeks or more. We provide a detailed timeline during our initial assessment.',
  },
  {
    question: 'Can I stay in my home during restoration?',
    answer: 'Often yes for localized damage. For extensive damage, electrical hazards, or contaminated water, we may recommend temporary relocation for safety.',
  },
  {
    question: 'How do you prevent mold after water damage?',
    answer: 'Rapid response is key. We begin extraction immediately and use industrial dehumidifiers to dry areas within 24-48 hours. We also apply antimicrobial treatments.',
  },
];
---

<ServicePillarLayout 
  serviceSlug={serviceSlug}
  metaDescription={metaDescription}
  faqs={faqs}
>
  <!-- Why Water Damage Requires Attention -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-6 text-center">
          Why Water Damage Requires Immediate Professional Attention
        </h2>
        
        <div class="prose prose-lg mx-auto mb-12">
          <p class="text-lg text-brand-gray leading-relaxed">
            Water damage is one of the most common—and most destructive—emergencies homeowners face. Whether it's a burst pipe, overflowing water heater, or storm flooding, water causes devastating damage in hours.
          </p>
          <p class="text-lg text-brand-gray leading-relaxed">
            Within 24 hours, mold can begin growing. Within days, structural damage can become irreversible. Rapid, professional restoration isn't just recommended—it's essential.
          </p>
        </div>
        
        <!-- Damage Timeline -->
        <div class="bg-brand-cream-200 rounded-xl p-6 lg:p-8">
          <h3 class="font-heading font-bold text-xl text-brand-black mb-6 text-center">
            The Water Damage Timeline: Why Every Hour Counts
          </h3>
          
          <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
            <div class="bg-white rounded-lg p-4 text-center shadow-soft">
              <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-brand-orange-100 flex items-center justify-center">
                <span class="font-bold text-brand-orange">0-1h</span>
              </div>
              <h4 class="font-heading font-bold text-brand-black mb-2">First Hour</h4>
              <p class="text-sm text-brand-gray">Water spreads, soaking carpets, drywall, furniture</p>
            </div>
            
            <div class="bg-white rounded-lg p-4 text-center shadow-soft">
              <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-warning-50 flex items-center justify-center">
                <span class="font-bold text-warning-700">24h</span>
              </div>
              <h4 class="font-heading font-bold text-brand-black mb-2">24 Hours</h4>
              <p class="text-sm text-brand-gray">Mold spores activate; drywall swells</p>
            </div>
            
            <div class="bg-white rounded-lg p-4 text-center shadow-soft">
              <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-error-50 flex items-center justify-center">
                <span class="font-bold text-error-700">48h</span>
              </div>
              <h4 class="font-heading font-bold text-brand-black mb-2">48 Hours</h4>
              <p class="text-sm text-brand-gray">Mold growth begins; structural damage accelerates</p>
            </div>
            
            <div class="bg-white rounded-lg p-4 text-center shadow-soft">
              <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-brand-black-100 flex items-center justify-center">
                <span class="font-bold text-brand-black">1wk+</span>
              </div>
              <h4 class="font-heading font-bold text-brand-black mb-2">One Week</h4>
              <p class="text-sm text-brand-gray">Extensive mold; potential structural failure</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Our Process -->
  <section class="section bg-brand-cream-200">
    <div class="container">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
          Our Water Damage Restoration Process
        </h2>
        <p class="text-lg text-brand-gray">
          IICRC-certified approach to completely restore your property.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
        {[
          { num: 1, title: 'Emergency Response & Assessment', desc: 'We arrive within 60 minutes to assess damage, identify the source, and document for insurance.' },
          { num: 2, title: 'Water Extraction & Removal', desc: 'Industrial pumps and extractors remove standing water before it causes more damage.' },
          { num: 3, title: 'Drying & Dehumidification', desc: 'Commercial air movers and dehumidifiers thoroughly dry all affected materials.' },
          { num: 4, title: 'Cleaning & Sanitization', desc: 'We clean, sanitize, and apply antimicrobial treatments to prevent mold.' },
          { num: 5, title: 'Restoration & Reconstruction', desc: 'Final repairs restore your property to pre-damage condition.' },
        ].map((step) => (
          <div class="bg-white rounded-xl p-6 shadow-card">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-brand-orange text-white flex items-center justify-center font-heading font-bold text-xl">
                {step.num}
              </div>
              <div>
                <h3 class="font-heading font-bold text-lg text-brand-black mb-2">{step.title}</h3>
                <p class="text-brand-gray">{step.desc}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</ServicePillarLayout>
