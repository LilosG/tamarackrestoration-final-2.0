---
/**
 * Water Damage Restoration - Service Pillar Page
 * ===============================================
 * Comprehensive page covering water damage restoration services
 * SEO-optimized for "water damage restoration" keywords
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Icon from '@/components/ui/Icon.astro';
import Button from '@/components/ui/Button.astro';
import Card from '@/components/ui/Card.astro';
import TrustBar from '@/components/sections/TrustBar.astro';
import ProcessSteps from '@/components/sections/ProcessSteps.astro';
import Testimonials from '@/components/sections/Testimonials.astro';
import CTABanner from '@/components/sections/CTABanner.astro';
import FAQ from '@/components/sections/FAQ.astro';
import LeadForm from '@/components/forms/LeadForm.astro';
import { services, cities, business } from '@/data/site';
import { 
  getServiceTitle, 
  getServiceDescription, 
  getCanonicalUrl, 
  getServiceSchema,
  getServiceBreadcrumbs,
  getBreadcrumbSchema,
  getFAQSchema,
  combineSchemas
} from '@/utils/seo';
import type { FAQ as FAQType } from '@/types';

// Get the service data
const service = services.find(s => s.slug === 'water-damage-restoration')!;

// SEO data
const title = getServiceTitle(service.name);
const description = getServiceDescription(service.name);
const canonical = getCanonicalUrl(`/services/${service.slug}/`);
const breadcrumbs = getServiceBreadcrumbs(service);

// Service-specific FAQs
const waterDamageFaqs: FAQType[] = [
  {
    question: 'How quickly should I call for water damage restoration?',
    answer: 'You should call immediately. Water damage worsens rapidly—within 24-48 hours, mold can begin to grow, and structural damage can become severe. The faster you act, the more you can save and the lower your restoration costs will be. Tamarack Restoration offers 24/7 emergency service with 60-minute response times.',
  },
  {
    question: 'What causes water damage in homes?',
    answer: 'Common causes include burst or leaking pipes, water heater failures, appliance malfunctions (washing machines, dishwashers), roof leaks, sewage backups, flooding from storms, and HVAC condensation issues. In coastal areas like North San Diego County, humidity can also contribute to hidden moisture problems.',
  },
  {
    question: 'Will my insurance cover water damage restoration?',
    answer: 'Most homeowner\'s insurance policies cover sudden and accidental water damage, such as burst pipes or appliance failures. However, gradual damage from neglected maintenance or flood damage typically requires separate coverage. We work with all major insurance carriers and can help document your claim for the best possible outcome.',
  },
  {
    question: 'How long does water damage restoration take?',
    answer: 'The timeline depends on the extent of damage. Minor water damage may be restored in 3-5 days, while extensive damage affecting multiple rooms or requiring structural repairs can take 1-2 weeks or more. We provide a detailed timeline during our initial assessment and keep you updated throughout the process.',
  },
  {
    question: 'Can I stay in my home during water damage restoration?',
    answer: 'In many cases, yes. For localized damage, you can often remain in your home while we work. However, if there\'s extensive damage, electrical hazards, or potential health risks from contaminated water, we may recommend temporary relocation for your safety. We\'ll advise you based on your specific situation.',
  },
  {
    question: 'What\'s the difference between Category 1, 2, and 3 water damage?',
    answer: 'Category 1 (Clean Water) comes from sanitary sources like broken supply lines. Category 2 (Gray Water) contains contaminants from sources like dishwashers or washing machines. Category 3 (Black Water) is highly contaminated from sewage, flooding, or toilet overflows. Each category requires different safety protocols and cleaning procedures.',
  },
  {
    question: 'How do you prevent mold after water damage?',
    answer: 'Rapid response is key—we begin water extraction immediately and use industrial dehumidifiers and air movers to dry affected areas within 24-48 hours. We also apply antimicrobial treatments to prevent mold growth. Our moisture monitoring ensures complete drying before restoration work begins.',
  },
  {
    question: 'Do you offer free estimates for water damage restoration?',
    answer: 'Yes, we provide free on-site assessments for water damage restoration. We\'ll evaluate the damage, explain our restoration plan, and provide a detailed estimate. For emergencies, we can begin mitigation immediately to prevent further damage while finalizing the scope of work.',
  },
];

// Cities served - for internal linking
const citiesServed = cities.filter(c => c.tier === 1 || c.tier === 2);

// Related services
const relatedServices = services.filter(s => 
  ['mold-removal', 'flood-cleanup', 'sewage-cleanup'].includes(s.slug)
);

// Schema markup
const serviceSchema = getServiceSchema(service, citiesServed);
const faqSchema = getFAQSchema(waterDamageFaqs);
const breadcrumbSchema = getBreadcrumbSchema(breadcrumbs);
const jsonLd = combineSchemas(serviceSchema, faqSchema, breadcrumbSchema);
---

<BaseLayout 
  title={title}
  description={description}
  canonical={canonical}
  jsonLd={jsonLd}
>
  <!-- Hero Section with Background Image -->
  <section class="relative bg-brand-black overflow-hidden min-h-[550px] lg:min-h-[600px] flex items-center">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src={service.image}
        alt="Professional water damage restoration in progress"
        class="w-full h-full object-cover"
        loading="eager"
        fetchpriority="high"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-brand-black via-brand-black/90 to-brand-black/70"></div>
    </div>
    
    <div class="container relative py-16 lg:py-20">
      <Breadcrumbs items={breadcrumbs} variant="dark" class="mb-6" />
      
      <div class="grid lg:grid-cols-12 gap-8 lg:gap-12 items-center">
        <!-- Content -->
        <div class="lg:col-span-7">
          <div class="inline-flex items-center gap-2 bg-brand-orange/20 border border-brand-orange/40 text-brand-orange px-4 py-2 rounded-full text-body-sm font-semibold mb-6 backdrop-blur-sm">
