---
/**
 * Dynamic Service Pillar Page
 * ===========================
 * Generates /services/[service]/ pages for all services
 * Uses ServicePillarLayout template with serviceContent data
 */

import ServicePillarLayout from '@/layouts/ServicePillarLayout.astro';
import { services } from '@/data/site';

export function getStaticPaths() {
  return services.map((service) => ({
    params: { service: service.slug },
  }));
}

const { service } = Astro.params;
---

<ServicePillarLayout serviceSlug={service} />
