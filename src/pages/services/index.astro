---
/**
 * Services Hub Page
 * =================
 * Overview of all restoration services with links to pillar pages
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Icon from '@/components/ui/Icon.astro';
import Button from '@/components/ui/Button.astro';
import TrustBar from '@/components/sections/TrustBar.astro';
import CTABanner from '@/components/sections/CTABanner.astro';
import FAQ from '@/components/sections/FAQ.astro';
import { services, business, globalFaqs } from '@/data/site';
import { generateTitle, getCanonicalUrl } from '@/utils/seo';
import type { BreadcrumbItem } from '@/types';

const title = generateTitle('Emergency Restoration Services | Water, Fire, Mold');
const description = `Professional restoration services in North San Diego County. Water damage, fire damage, mold removal, flood cleanup, sewage cleanup. IICRC certified, 24/7 emergency response. Call ${business.phoneFormatted}.`;
const canonical = getCanonicalUrl('/services/');

const breadcrumbs: BreadcrumbItem[] = [
  { label: 'Home', href: '/' },
  { label: 'Services', href: '/services/' },
];

// Filter FAQs related to services
const serviceFaqs = globalFaqs.filter(f => f.category === 'process' || f.category === 'emergency').slice(0, 5);
---

<BaseLayout 
  title={title}
  description={description}
  canonical={canonical}
>
  <!-- Hero Section -->
  <section class="relative bg-brand-black overflow-hidden">
    <!-- Background gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-brand-black via-brand-black-900 to-brand-black"></div>
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-brand-orange rounded-full blur-[150px] -translate-y-1/2 translate-x-1/2"></div>
    </div>
    
    <div class="container relative py-16 lg:py-24">
      <Breadcrumbs items={breadcrumbs} variant="dark" class="mb-8" />
      
      <div class="max-w-3xl">
        <div class="inline-flex items-center gap-2 bg-brand-orange/20 border border-brand-orange/40 text-brand-orange px-4 py-2 rounded-full text-body-sm font-semibold mb-6">
          <Icon name="lightning" size="sm" />
          24/7 Emergency Response
        </div>
        
        <h1 class="font-display text-display-xl text-white mb-6">
          Emergency Restoration Services
        </h1>
        
        <p class="text-xl text-brand-cream-300 mb-8 leading-relaxed">
          When disaster strikes, Tamarack Restoration responds fast. Our IICRC-certified team provides comprehensive restoration services throughout North San Diego Countyâ€”available 24/7 with 60-minute response times.
        </p>
        
        <div class="flex flex-wrap items-center gap-4">
          <Button href={`tel:${business.phone}`} variant="primary" size="lg">
            <Icon name="phone" size="md" />
            Call {business.phoneFormatted}
          </Button>
          <Button href="/contact/" variant="outline" size="lg" class="border-white/30 text-white hover:bg-white hover:text-brand-black">
            Request Free Estimate
          </Button>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Trust Bar -->
  <TrustBar variant="dark" />
  
  <!-- Services Grid Section -->
  <section class="section bg-white">
    <div class="container">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="font-display text-display-lg text-brand-black mb-4">
          Our Restoration Services
        </h2>
        <p class="text-body-lg text-brand-gray">
          From water damage emergencies to mold remediation, we provide complete restoration solutions to protect your property and restore your peace of mind.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service) => (
          <a 
            href={`/services/${service.slug}/`}
            class="group relative bg-white rounded-xl shadow-card hover:shadow-card-hover transition-all duration-normal overflow-hidden"
          >
            <!-- Service Image -->
            <div class="aspect-card relative overflow-hidden bg-brand-cream-200">
              <img
                src={service.image}
                alt={service.name}
                class="w-full h-full object-cover transition-transform duration-slow group-hover:scale-105"
                loading="lazy"
                width="400"
                height="300"
              />
              {service.emergencyService && (
                <div class="absolute top-4 left-4">
                  <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-brand-orange text-white text-body-xs font-semibold rounded-full shadow-soft">
                    <Icon name="lightning" size="sm" />
                    24/7 Emergency
                  </span>
                </div>
              )}
              <!-- Hover overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-brand-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-normal"></div>
            </div>
            
            <!-- Content -->
            <div class="p-6">
              <div class="flex items-start gap-3 mb-3">
                <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-xl bg-brand-orange-100 text-brand-orange group-hover:bg-brand-orange group-hover:text-white transition-colors">
                  <Icon name={service.icon} size="lg" />
                </div>
                <div class="flex-1">
                  <h3 class="font-heading font-bold text-brand-black text-display-sm group-hover:text-brand-orange transition-colors">
                    {service.name}
                  </h3>
                </div>
              </div>
              
              <p class="text-brand-gray text-body-md mb-4">
                {service.shortDescription}
              </p>
              
              <!-- Features preview -->
              <ul class="space-y-2 mb-4">
                {service.features.slice(0, 3).map((feature) => (
                  <li class="flex items-center gap-2 text-body-sm text-brand-gray">
                    <Icon name="check-circle" size="sm" class="text-brand-orange flex-shrink-0" />
                    {feature}
                  </li>
                ))}
              </ul>
              
              <span class="inline-flex items-center gap-1.5 text-brand-orange font-semibold text-body-md group-hover:gap-2.5 transition-all">
                Learn More
                <Icon name="arrow-right" size="sm" />
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Why Choose Us Section -->
  <section class="section bg-brand-cream-200">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="font-display text-display-lg text-brand-black mb-6">
            Why Choose Tamarack for Your Restoration Needs?
          </h2>
          <p class="text-body-lg text-brand-gray mb-8">
            When disaster strikes, you need a restoration company that responds quickly, works professionally, and treats you like family. That's what you get with Tamarack Restoration.
          </p>
          
          <div class="grid sm:grid-cols-2 gap-6">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-xl bg-brand-orange text-white">
                <Icon name="clock" size="lg" />
              </div>
              <div>
                <h3 class="font-heading font-bold text-brand-black mb-1">60-Minute Response</h3>
                <p class="text-body-sm text-brand-gray">We arrive fast when every minute counts.</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-xl bg-brand-orange text-white">
                <Icon name="award" size="lg" />
              </div>
              <div>
                <h3 class="font-heading font-bold text-brand-black mb-1">IICRC Certified</h3>
                <p class="text-body-sm text-brand-gray">Industry-leading credentials you can trust.</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-xl bg-brand-orange text-white">
                <Icon name="shield" size="lg" />
              </div>
              <div>
                <h3 class="font-heading font-bold text-brand-black mb-1">Insurance Experts</h3>
                <p class="text-body-sm text-brand-gray">We handle claims to simplify your life.</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-xl bg-brand-orange text-white">
                <Icon name="star" size="lg" />
              </div>
              <div>
                <h3 class="font-heading font-bold text-brand-black mb-1">{business.reviewCount} Five-Star Reviews</h3>
                <p class="text-body-sm text-brand-gray">Trusted by our North County neighbors.</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="relative">
          <div class="absolute -inset-4 bg-brand-orange/10 rounded-2xl blur-xl"></div>
          <img
            src="/images/team/team-at-work.webp"
            alt="Tamarack Restoration team"
            class="relative w-full rounded-xl shadow-soft-xl"
            loading="lazy"
            width="1019"
            height="1020"
          />
        </div>
      </div>
    </div>
  </section>
  
  <!-- Service Areas Callout -->
  <section class="section bg-white">
    <div class="container">
      <div class="bg-brand-black rounded-2xl p-8 lg:p-12 text-center">
        <h2 class="font-display text-display-md text-white mb-4">
          Serving North San Diego County
        </h2>
        <p class="text-brand-cream-300 text-body-lg mb-6 max-w-2xl mx-auto">
          We proudly serve Carlsbad, Oceanside, Vista, San Marcos, Encinitas, and surrounding communities with rapid emergency restoration services.
        </p>
        <div class="flex flex-wrap justify-center gap-3 mb-8">
          {['Carlsbad', 'Oceanside', 'Vista', 'San Marcos', 'Encinitas'].map((city) => (
            <a 
              href={`/service-area/${city.toLowerCase().replace(' ', '-')}/`}
              class="inline-flex items-center gap-1 px-4 py-2 bg-white/10 text-white rounded-full text-body-sm hover:bg-brand-orange transition-colors"
            >
              <Icon name="map-pin" size="sm" />
              {city}
            </a>
          ))}
        </div>
        <Button href="/service-area/" variant="primary" size="lg">
          View All Service Areas
        </Button>
      </div>
    </div>
  </section>
  
  <!-- FAQ Section -->
  <FAQ 
    title="Common Questions About Our Services"
    subtitle="Get quick answers to frequently asked questions about our restoration services"
    faqs={serviceFaqs}
    limit={5}
    class="bg-brand-cream-200"
  />
  
  <!-- Final CTA -->
  <CTABanner 
    variant="emergency"
    title="Disaster Won't Wait. Neither Should You."
    subtitle="Call now for immediate 24/7 emergency restoration services"
  />
</BaseLayout>
