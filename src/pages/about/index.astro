---
/**
 * About Page
 * ==========
 * Company story, team, values, certifications
 * Uses AboutLayout for consistent structure
 */

import AboutLayout from '@/layouts/AboutLayout.astro';
import Icon from '@/components/ui/Icon.astro';
import Button from '@/components/ui/Button.astro';
import Testimonials from '@/components/sections/Testimonials.astro';
import FAQ from '@/components/sections/FAQ.astro';
import { companyValues, certifications, companyStory } from '@/data/about';
---

<AboutLayout page="index">
  <!-- Our Story -->
  <section class="section bg-white">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-6">
            Our Story
          </h2>
          <div class="space-y-4 text-brand-gray">
            {companyStory.paragraphs.map((p) => (
              <p class="leading-relaxed">{p}</p>
            ))}
          </div>
        </div>
        <div class="relative">
          <div class="aspect-[4/3] rounded-2xl bg-brand-cream-200 overflow-hidden">
            <img 
              src={companyStory.image}
              alt={companyStory.imageAlt}
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          <div class="absolute -bottom-6 -left-6 bg-brand-orange text-white rounded-xl p-4 shadow-card">
            <div class="font-heading font-bold text-3xl">{companyStory.statValue}</div>
            <div class="text-sm text-white/80">{companyStory.statLabel}</div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Why Choose Us / Values -->
  <section class="section bg-brand-cream-200">
    <div class="container">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
          Why Families Choose Tamarack
        </h2>
        <p class="text-lg text-brand-gray">
          We're not the biggest restoration company—and that's by design. We believe in quality over quantity, relationships over transactions.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {companyValues.map((value) => (
          <div class="bg-white rounded-xl p-6 shadow-soft">
            <div class="w-12 h-12 rounded-xl bg-brand-orange-100 text-brand-orange flex items-center justify-center mb-4">
              <Icon name={value.icon} size="lg" />
            </div>
            <h3 class="font-heading font-bold text-lg text-brand-black mb-2">
              {value.title}
            </h3>
            <p class="text-brand-gray text-sm leading-relaxed">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Certifications -->
  <section class="section bg-white">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-flex items-center gap-2 text-brand-orange font-semibold text-sm mb-4">
            <Icon name="award" size="sm" />
            IICRC CERTIFIED
          </div>
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-6">
            Certified Professionals You Can Trust
          </h2>
          <p class="text-brand-gray mb-6 leading-relaxed">
            The Institute of Inspection, Cleaning and Restoration Certification (IICRC) sets the standards for our industry. Every Tamarack technician is trained and certified to these rigorous standards.
          </p>
          <p class="text-brand-gray mb-8 leading-relaxed">
            This means you get technicians who know the science behind water damage, understand mold behavior, and use industry-best practices for every restoration project.
          </p>
          <Button href="/about/certifications/" variant="outline">
            View All Certifications
            <Icon name="arrow-right" size="sm" />
          </Button>
        </div>
        
        <div class="space-y-4">
          {certifications.map((cert) => (
            <div class="flex items-start gap-4 p-4 bg-brand-cream-200 rounded-lg">
              <div class="w-10 h-10 rounded-full bg-brand-orange-100 text-brand-orange flex items-center justify-center flex-shrink-0">
                <Icon name="check" size="md" />
              </div>
              <div>
                <h4 class="font-heading font-semibold text-brand-black">{cert.name}</h4>
                <p class="text-brand-gray text-sm">{cert.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <!-- Testimonials -->
  <Testimonials 
    title="What Our Customers Say"
    subtitle="Don't just take our word for it—hear from the families we've helped."
    limit={3}
    class="bg-brand-cream-200"
  />
  
  <!-- FAQ -->
  <FAQ 
    title="Common Questions"
    subtitle="Quick answers about our restoration services."
    limit={4}
    showViewAll={true}
    class="bg-white"
  />
</AboutLayout>
