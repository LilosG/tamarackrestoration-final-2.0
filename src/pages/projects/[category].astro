---
/**
 * Dynamic Project Category Page
 * ==============================
 * Shows all projects within a specific category (water-damage, mold, fire-damage, flood)
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Icon from '@/components/ui/Icon.astro';
import Button from '@/components/ui/Button.astro';
import TrustBar from '@/components/sections/TrustBar.astro';
import { business, services } from '@/data/site';
import { projectCategories, getProjectsByCategory } from '@/data/projects';
import type { ProjectCategoryInfo } from '@/data/projects';
import { getCanonicalUrl, getBreadcrumbSchema } from '@/utils/seo';

export function getStaticPaths() {
  return projectCategories.map((category) => ({
    params: { category: category.slug },
    props: { category },
  }));
}

interface Props {
  category: ProjectCategoryInfo;
}

const { category } = Astro.props;
const categoryProjects = getProjectsByCategory(category.slug);
const relatedService = services.find(s => s.slug === category.relatedService);

const canonical = getCanonicalUrl(`/projects/${category.slug}/`);
const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Projects', href: '/projects/' },
  { label: category.name, href: `/projects/${category.slug}/`, current: true },
];
const breadcrumbSchema = getBreadcrumbSchema(breadcrumbs);

// Other categories for cross-linking
const otherCategories = projectCategories.filter(c => c.slug !== category.slug);
---

<BaseLayout
  title={category.seoTitle}
  description={category.seoDescription}
  canonical={canonical}
  jsonLd={[breadcrumbSchema]}
>
  <!-- Hero -->
  <section class="relative bg-brand-black overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-brand-black via-brand-black/95 to-brand-orange/20"></div>

    <div class="container relative py-16 lg:py-20">
      <Breadcrumbs items={breadcrumbs} variant="dark" class="mb-6" />

      <div class="max-w-3xl">
        <div class="inline-flex items-center gap-2 bg-brand-orange/20 border border-brand-orange/40 text-brand-orange px-4 py-2 rounded-full text-sm font-medium mb-6">
          <Icon name={category.icon} size="sm" />
          {category.name}
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-heading font-bold text-white mb-6 leading-[1.1] tracking-tight">
          {category.name} <span class="text-brand-orange">Projects</span>
        </h1>

        <p class="text-brand-cream-300 text-lg lg:text-xl leading-relaxed">
          {category.description}
        </p>
      </div>
    </div>
  </section>

  <TrustBar variant="light" />

  <!-- Projects Grid -->
  <section class="section bg-white">
    <div class="container">
      <div class="space-y-12">
        {categoryProjects.map((project, index) => (
          <div class={`grid lg:grid-cols-2 gap-8 lg:gap-12 items-start ${index > 0 ? 'pt-12 border-t border-brand-cream-300' : ''}`}>
            <div class={index % 2 === 1 ? 'lg:order-2' : ''}>
              <div class="aspect-video rounded-2xl bg-brand-cream-200 overflow-hidden flex items-center justify-center">
                <Icon name="camera" size="xl" class="text-brand-gray-light" />
              </div>
            </div>

            <div class={index % 2 === 1 ? 'lg:order-1' : ''}>
              <div class="flex items-center gap-3 mb-4">
                <span class="text-xs font-medium text-brand-orange bg-brand-orange-100 px-2 py-1 rounded">
                  {project.location ?? project.city}
                </span>
                <span class="text-xs text-brand-gray">
                  {project.timeline ? `Timeline: ${project.timeline}` : `Completed: ${project.completionDate}`}
                </span>
              </div>

              <h2 class="font-heading text-2xl md:text-3xl font-bold text-brand-black mb-4">
                {project.title}
              </h2>

              <p class="text-brand-gray mb-6 leading-relaxed">
                {project.description}
              </p>

              <div class="space-y-4">
                <div class="bg-brand-cream-200 rounded-lg p-4">
                  <h3 class="font-heading font-semibold text-brand-black text-sm mb-2 flex items-center gap-2">
                    <Icon name="alert-triangle" size="sm" class="text-brand-orange" />
                    The Challenge
                  </h3>
                  <p class="text-brand-gray text-sm leading-relaxed">{project.challenge}</p>
                </div>

                <div class="bg-brand-cream-200 rounded-lg p-4">
                  <h3 class="font-heading font-semibold text-brand-black text-sm mb-2 flex items-center gap-2">
                    <Icon name="tool" size="sm" class="text-brand-orange" />
                    Our Solution
                  </h3>
                  <p class="text-brand-gray text-sm leading-relaxed">{project.solution}</p>
                </div>

                <div class="bg-brand-cream-200 rounded-lg p-4">
                  <h3 class="font-heading font-semibold text-brand-black text-sm mb-2 flex items-center gap-2">
                    <Icon name="check-circle" size="sm" class="text-brand-orange" />
                    The Result
                  </h3>
                  <p class="text-brand-gray text-sm leading-relaxed">{project.result}</p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Related Service -->
  {relatedService && (
    <section class="section bg-brand-cream-200">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="font-heading text-2xl md:text-3xl font-bold text-brand-black mb-4">
            Need {relatedService.name}?
          </h2>
          <p class="text-brand-gray mb-8 leading-relaxed">
            {relatedService.description}
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <Button href={`/services/${relatedService.slug}/`} variant="primary" size="lg">
              Learn About Our {relatedService.name} Service
            </Button>
            <Button href={`tel:${business.phone}`} variant="outline" size="lg">
              <Icon name="phone" size="sm" />
              {business.phoneFormatted}
            </Button>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Other Categories -->
  <section class="section bg-white">
    <div class="container">
      <h2 class="font-heading text-2xl md:text-3xl font-bold text-brand-black mb-8 text-center">
        Explore Other Project Categories
      </h2>

      <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
        {otherCategories.map((cat) => (
          <a
            href={`/projects/${cat.slug}/`}
            class="group bg-white border border-brand-cream-300 rounded-xl p-6 hover:shadow-card transition-all text-center"
          >
            <div class="w-12 h-12 rounded-xl bg-brand-orange-100 text-brand-orange flex items-center justify-center mb-4 mx-auto group-hover:bg-brand-orange group-hover:text-white transition-colors">
              <Icon name={cat.icon} size="lg" />
            </div>
            <h3 class="font-heading font-bold text-lg text-brand-black mb-2 group-hover:text-brand-orange transition-colors">
              {cat.name}
            </h3>
            <span class="text-brand-orange text-sm font-medium">
              View Projects
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-brand-black py-16">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-heading text-2xl md:text-3xl font-bold text-white mb-4">
          Ready to Restore Your Property?
        </h2>
        <p class="text-brand-cream-300 mb-8">
          Every project you see here started with a phone call. We're ready to help 24/7.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <Button href={`tel:${business.phone}`} variant="primary" size="lg">
            <Icon name="phone" size="sm" />
            {business.phoneFormatted}
          </Button>
          <Button href="/contact/" variant="outline" size="lg" class="border-white/30 text-white hover:bg-white hover:text-brand-black">
            Request Free Estimate
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
