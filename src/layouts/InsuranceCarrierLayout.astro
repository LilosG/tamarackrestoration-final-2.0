---
/**
 * Insurance Carrier Layout
 * ========================
 * Template for /insurance/[carrier]/ pages
 * Enhanced with rich content from insuranceCarrierContent
 */

import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Icon from '@/components/ui/Icon.astro';
import Button from '@/components/ui/Button.astro';
import TrustBar from '@/components/sections/TrustBar.astro';
import Testimonials from '@/components/sections/Testimonials.astro';
import FAQ from '@/components/sections/FAQ.astro';
import LeadForm from '@/components/forms/LeadForm.astro';
import { insuranceCarriers, services, business } from '@/data/site';
import { insuranceCarrierContent } from '@/data/content';
import { getCanonicalUrl, getBreadcrumbSchema } from '@/utils/seo';
import type { FAQ as FAQType } from '@/types';

interface Props {
  carrierSlug: string;
}

const { carrierSlug } = Astro.props;

const carrier = insuranceCarriers.find(c => c.slug === carrierSlug)!;
const content = insuranceCarrierContent[carrierSlug] || null;
const coveredServices = services.filter(s => carrier.coveredServices?.includes(s.slug as any));

// SEO
const title = `${carrier.name} Insurance Claims | Tamarack Restoration`;
const description = `We work directly with ${carrier.name} for water damage, fire, mold, and flood restoration claims in North San Diego County. Direct billing, thorough documentation. Call ${business.phoneFormatted}.`;
const canonical = getCanonicalUrl(`/insurance/${carrier.slug}/`);

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Insurance', href: '/insurance/' },
  { label: carrier.name, href: `/insurance/${carrier.slug}/`, current: true },
];

const breadcrumbSchema = getBreadcrumbSchema(breadcrumbs);

// Use content data for claim steps or fallback
const claimSteps = content?.claimSteps || [
  { title: 'Document Damage', description: 'Take photos and videos of all damage.' },
  { title: 'File Your Claim', description: `Contact ${carrier.name} to open your claim.` },
  { title: 'Call Tamarack', description: 'We begin emergency service immediately.' },
  { title: 'Adjuster Coordination', description: 'We work directly with your adjuster.' },
  { title: 'Restoration Complete', description: 'We restore and bill your insurance directly.' },
];

// Insurance-specific FAQs
const faqs: FAQType[] = [
  {
    question: `Does ${carrier.name} cover water damage restoration?`,
    answer: `Yes, ${carrier.name} typically covers sudden and accidental water damage like burst pipes and appliance failures. We work directly with ${carrier.name} adjusters to document damage and maximize your claim.`,
  },
  {
    question: `How do I file a ${carrier.name} claim for property damage?`,
    answer: `First, document all damage with photos. Then contact ${carrier.name} to open a claim. Call us at ${business.phoneFormatted} for emergency serviceâ€”we begin work immediately and coordinate with your adjuster.`,
  },
  {
    question: `Will I have to pay out of pocket with ${carrier.name}?`,
    answer: `You'll typically be responsible for your deductible. We work with ${carrier.name} to ensure all covered damage is documented so you receive the full benefits of your policy.`,
  },
  {
    question: `How long does the ${carrier.name} claims process take?`,
    answer: `Claim timelines vary, but we work to expedite the process. We provide detailed documentation, meet with adjusters on-site, and communicate directly with ${carrier.name} to keep your claim moving.`,
  },
  {
    question: `Does ${carrier.name} cover mold removal?`,
    answer: `${carrier.name} typically covers mold remediation when it results from a covered water damage event and is addressed promptly. We document the connection between water damage and mold to support your claim.`,
  },
];
---

<BaseLayout 
  title={title}
  description={description}
  canonical={canonical}
  jsonLd={[breadcrumbSchema]}
>
  <!-- Hero -->
  <section class="relative bg-brand-black overflow-hidden min-h-[450px] lg:min-h-[500px] flex items-center">
    <div class="absolute inset-0 bg-gradient-to-br from-brand-black via-brand-black/95 to-brand-orange/20"></div>
    
    <div class="container relative py-16 lg:py-20">
      <Breadcrumbs items={breadcrumbs} variant="dark" class="mb-6" />
      
      <div class="grid lg:grid-cols-12 gap-8 lg:gap-12 items-center">
        <div class="lg:col-span-7">
          <!-- Carrier Logo -->
          <div class="mb-6">
            <img 
              src={carrier.logo}
              alt={`${carrier.name} Insurance Logo`}
              class="h-12 w-auto object-contain"
              loading="eager"
            />
          </div>
          
          <div class="inline-flex items-center gap-2 bg-brand-orange/20 border border-brand-orange/40 text-brand-orange px-4 py-2 rounded-full text-sm font-medium mb-6">
            <Icon name="shield" size="sm" />
            Insurance Partner
          </div>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-heading font-bold text-white mb-6 leading-[1.1] tracking-tight">
            We Work With{' '}
            <span class="text-brand-orange">{carrier.name}</span>
          </h1>
          
          <p class="text-brand-cream-300 text-lg lg:text-xl mb-8 max-w-xl leading-relaxed">
            {carrier.description} We handle the paperwork so you can focus on your family.
          </p>
          
          <div class="flex flex-wrap items-center gap-x-6 gap-y-3 text-sm mb-8">
            <div class="flex items-center gap-2 text-brand-cream-300">
              <Icon name="check-circle" size="sm" class="text-brand-orange" />
              <span>Direct {carrier.name} Billing</span>
            </div>
            <div class="flex items-center gap-2 text-brand-cream-300">
              <Icon name="file-text" size="sm" class="text-brand-orange" />
              <span>Full Documentation</span>
            </div>
            <div class="flex items-center gap-2 text-brand-cream-300">
              <Icon name="clock" size="sm" class="text-brand-orange" />
              <span>60-Minute Response</span>
            </div>
          </div>
          
          <div class="hidden lg:flex items-center gap-6">
            <a href={`tel:${business.phone}`} class="group flex items-center gap-3 text-white hover:text-brand-orange transition-colors">
              <span class="flex items-center justify-center w-12 h-12 rounded-full bg-brand-orange group-hover:bg-brand-orange-600 transition-colors">
                <Icon name="phone" size="md" class="text-white" />
              </span>
              <span>
                <span class="block text-sm text-brand-cream-400">Call 24/7</span>
                <span class="block font-bold text-xl tracking-tight">{business.phoneFormatted}</span>
              </span>
            </a>
          </div>
        </div>
        
        <div class="hidden lg:block lg:col-span-5">
          <LeadForm 
            variant="card"
            title={`${carrier.name} Claim Help`}
            subtitle="We handle the insurance process"
            source={`insurance-${carrierSlug}`}
          />
        </div>
      </div>
    </div>
  </section>
  
  <TrustBar variant="light" />
  
  <!-- How We Help Section -->
  <section class="section bg-white">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div>
          <div class="inline-flex items-center gap-2 bg-brand-orange-100 text-brand-orange px-4 py-2 rounded-full text-body-sm font-semibold mb-4">
            <Icon name="users" size="sm" />
            Your Claims Partner
          </div>
          
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-6">
            How We Help {carrier.name} Policyholders
          </h2>
          
          <div class="space-y-4 text-brand-gray">
            <p class="text-lg leading-relaxed">
              {content?.howWeHelp || `Filing a ${carrier.name} claim after property damage is stressful. We make it easier by working directly with ${carrier.name} on your behalf.`}
            </p>
            <p class="leading-relaxed">
              Our team understands what {carrier.name} adjusters need to approve claims quickly. We provide detailed documentation, professional assessments, and clear communication throughout the restoration process.
            </p>
          </div>
          
          <div class="mt-8 flex flex-wrap gap-4">
            <Button href={`tel:${business.phone}`} variant="primary">
              <Icon name="phone" size="sm" />
              Call {business.phoneFormatted}
            </Button>
            <Button href="/contact/" variant="outline">
              Request Free Estimate
            </Button>
          </div>
        </div>
        
        <div class="bg-brand-cream-200 rounded-2xl p-8">
          <h3 class="font-heading font-bold text-xl text-brand-black mb-6">
            The {carrier.name} Claims Process
          </h3>
          <div class="space-y-4">
            {claimSteps.map((step, index) => (
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-full bg-brand-orange text-white flex items-center justify-center flex-shrink-0 font-bold">
                  {index + 1}
                </div>
                <div>
                  <h4 class="font-heading font-semibold text-brand-black">{step.title}</h4>
                  <p class="text-brand-gray text-sm">{step.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- What's Covered Section -->
  {content && (
    <section class="section bg-brand-cream-200">
      <div class="container">
        <div class="text-center max-w-3xl mx-auto mb-12">
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
            {carrier.name} Coverage Guide
          </h2>
          <p class="text-lg text-brand-gray">
            Understanding what your {carrier.name} policy covers helps you know what to expect.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
          {content.typicallyCovered && (
            <div class="bg-white rounded-2xl p-8 shadow-soft">
              <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-12 rounded-xl bg-success-50 flex items-center justify-center">
                  <Icon name="check-circle" size="lg" class="text-success-500" />
                </div>
                <h3 class="font-heading font-bold text-brand-black text-xl">
                  Typically Covered
                </h3>
              </div>
              <ul class="space-y-3">
                {content.typicallyCovered.map((item) => (
                  <li class="flex items-start gap-2">
                    <Icon name="check" size="sm" class="text-success-500 mt-1 flex-shrink-0" />
                    <span class="text-brand-gray">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
          
          {content.mayNotBeCovered && (
            <div class="bg-white rounded-2xl p-8 shadow-soft">
              <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-12 rounded-xl bg-warning-50 flex items-center justify-center">
                  <Icon name="alert-triangle" size="lg" class="text-warning-500" />
                </div>
                <h3 class="font-heading font-bold text-brand-black text-xl">
                  May Require Additional Coverage
                </h3>
              </div>
              <ul class="space-y-3">
                {content.mayNotBeCovered.map((item) => (
                  <li class="flex items-start gap-2">
                    <Icon name="alert-circle" size="sm" class="text-warning-500 mt-1 flex-shrink-0" />
                    <span class="text-brand-gray">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
      </div>
    </section>
  )}
  
  <!-- Services Covered -->
  <section class="section bg-white">
    <div class="container">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
          Restoration Services for {carrier.name} Claims
        </h2>
        <p class="text-lg text-brand-gray">
          We provide these services and coordinate directly with {carrier.name} for your claim.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {coveredServices.map((service) => (
          <a 
            href={`/insurance/${carrier.slug}/${service.slug}/`}
            class="group bg-white border border-brand-cream-300 rounded-xl p-6 hover:border-brand-orange hover:shadow-card transition-all"
          >
            <div class="w-12 h-12 rounded-xl bg-brand-orange-100 text-brand-orange flex items-center justify-center mb-4 group-hover:bg-brand-orange group-hover:text-white transition-colors">
              <Icon name={service.icon} size="lg" />
            </div>
            <h3 class="font-heading font-bold text-lg text-brand-black mb-2 group-hover:text-brand-orange transition-colors">
              {service.name}
            </h3>
            <p class="text-brand-gray text-sm mb-3">
              {service.shortDescription}
            </p>
            <span class="inline-flex items-center gap-1 text-brand-orange font-semibold text-sm">
              {carrier.name} Claims
              <Icon name="arrow-right" size="sm" />
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Why Choose Us -->
  <section class="section bg-brand-cream-200">
    <div class="container">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
          Why {carrier.name} Customers Choose Tamarack
        </h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {(content?.whyChooseUs || [
          { title: 'Complete Documentation', description: `Detailed reports that ${carrier.name} adjusters need.` },
          { title: 'Direct Communication', description: `We coordinate directly with your ${carrier.name} adjuster.` },
          { title: 'Maximize Your Claim', description: 'Thorough assessments ensure all damage is documented.' },
        ]).map((reason) => (
          <div class="bg-white rounded-2xl p-6 shadow-soft text-center">
            <div class="w-16 h-16 rounded-2xl bg-brand-orange-100 flex items-center justify-center mx-auto mb-4">
              <Icon name="check-circle" size="lg" class="text-brand-orange" />
            </div>
            <h3 class="font-heading font-bold text-brand-black text-xl mb-3">
              {reason.title}
            </h3>
            <p class="text-brand-gray">
              {reason.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Claim Tips -->
  {content?.claimTips && (
    <section class="section bg-white">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <div class="bg-brand-cream-200 rounded-2xl p-8">
            <h3 class="font-heading font-bold text-brand-black text-xl mb-6 text-center">
              Tips for {carrier.name} Policyholders
            </h3>
            <div class="grid sm:grid-cols-2 gap-4">
              {content.claimTips.map((tip) => (
                <div class="flex items-start gap-3 bg-white rounded-lg p-4">
                  <Icon name="lightbulb" size="sm" class="text-brand-orange flex-shrink-0 mt-0.5" />
                  <span class="text-brand-gray text-sm">{tip}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )}
  
  <Testimonials limit={3} class="bg-brand-cream-200" />
  
  <FAQ 
    title={`${carrier.name} Insurance FAQs`}
    subtitle="Common questions about insurance claims"
    faqs={faqs}
    showViewAll={false}
    class="bg-white"
  />
  
  <!-- Mobile Form -->
  <section class="section lg:hidden bg-brand-cream-200">
    <div class="container">
      <LeadForm 
        variant="card"
        title={`${carrier.name} Claim Help`}
        subtitle="We handle the insurance process"
        source={`insurance-${carrierSlug}-mobile`}
      />
    </div>
  </section>
</BaseLayout>
