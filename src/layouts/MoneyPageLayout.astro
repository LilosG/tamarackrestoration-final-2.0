---
/**
 * Money Page Layout
 * =================
 * Template for /service-area/[city]/[service]/ pages
 * High-intent local SEO pages for city+service combinations
 */

import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Icon from '@/components/ui/Icon.astro';
import Button from '@/components/ui/Button.astro';
import TrustBar from '@/components/sections/TrustBar.astro';
import Testimonials from '@/components/sections/Testimonials.astro';
import FAQ from '@/components/sections/FAQ.astro';
import LeadForm from '@/components/forms/LeadForm.astro';
import { services, cities, business } from '@/data/site';
import { getCanonicalUrl, getBreadcrumbSchema, getFAQSchema, combineSchemas } from '@/utils/seo';
import type { FAQ as FAQType } from '@/types';

interface Props {
  citySlug: string;
  serviceSlug: string;
  faqs?: FAQType[];
}

const { citySlug, serviceSlug, faqs = [] } = Astro.props;

const city = cities.find(c => c.slug === citySlug)!;
const service = services.find(s => s.slug === serviceSlug)!;

// SEO
const title = `${service.name} in ${city.name}, CA | Tamarack Restoration`;
const description = `Professional ${service.name.toLowerCase()} in ${city.name}. 24/7 emergency response, 60-minute arrival. IICRC certified. ${business.reviewCount} five-star reviews. Call ${business.phoneFormatted}.`;
const canonical = getCanonicalUrl(`/service-area/${city.slug}/${service.slug}/`);

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Service Areas', href: '/service-area/' },
  { label: city.name, href: `/service-area/${city.slug}/` },
  { label: service.name, href: `/service-area/${city.slug}/${service.slug}/`, current: true },
];

// Schema
const breadcrumbSchema = getBreadcrumbSchema(breadcrumbs);
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": `${service.name} in ${city.name}`,
  "provider": {
    "@type": "LocalBusiness",
    "name": business.name,
    "telephone": business.phoneFormatted,
    "address": {
      "@type": "PostalAddress",
      "addressLocality": business.address.city,
      "addressRegion": business.address.state
    }
  },
  "areaServed": {
    "@type": "City",
    "name": city.name,
    "containedInPlace": { "@type": "State", "name": "California" }
  },
  "description": description
};
const faqSchema = faqs.length > 0 ? getFAQSchema(faqs) : null;
const jsonLd = faqSchema ? combineSchemas(serviceSchema, breadcrumbSchema, faqSchema) : combineSchemas(serviceSchema, breadcrumbSchema);

// Related cities for internal linking
const relatedCities = cities.filter(c => c.slug !== citySlug && (c.tier === 1 || c.tier === 2)).slice(0, 4);
---

<BaseLayout 
  title={title}
  description={description}
  canonical={canonical}
  jsonLd={jsonLd}
>
  <!-- Hero -->
  <section class="relative bg-brand-black overflow-hidden min-h-[450px] lg:min-h-[500px] flex items-center">
    <div class="absolute inset-0">
      <img 
        src={service.image || '/images/hero/truck-hero.webp'}
        alt={`${service.name} in ${city.name}`}
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-brand-black/85 via-brand-black/60 to-brand-black/40"></div>
    </div>
    
    <div class="container relative py-16 lg:py-20">
      <Breadcrumbs items={breadcrumbs} variant="dark" class="mb-6" />
      
      <div class="grid lg:grid-cols-12 gap-8 lg:gap-12 items-center">
        <div class="lg:col-span-7">
          <div class="inline-flex items-center gap-2 bg-brand-orange/20 border border-brand-orange/40 text-brand-orange px-4 py-2 rounded-full text-sm font-medium mb-6">
            <Icon name="map-pin" size="sm" />
            {city.name}, CA
          </div>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-heading font-bold text-white mb-6 leading-[1.1] tracking-tight">
            {service.name} in{' '}
            <span class="text-brand-orange">{city.name}</span>
          </h1>
          
          <p class="text-brand-cream-300 text-lg lg:text-xl mb-8 max-w-xl leading-relaxed">
            Professional {service.name.toLowerCase()} for {city.name} homes and businesses. We respond within 60 minutes, 24/7.
          </p>
          
          <div class="flex flex-wrap items-center gap-x-6 gap-y-3 text-sm mb-8">
            <div class="flex items-center gap-2 text-brand-cream-300">
              <Icon name="clock" size="sm" class="text-brand-orange" />
              <span>60-Minute Response</span>
            </div>
            <div class="flex items-center gap-2 text-brand-cream-300">
              <Icon name="star" size="sm" class="text-brand-orange" />
              <span>{business.rating} Stars</span>
            </div>
            <div class="flex items-center gap-2 text-brand-cream-300">
              <Icon name="award" size="sm" class="text-brand-orange" />
              <span>IICRC Certified</span>
            </div>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-4 lg:hidden">
            <Button href={`tel:${business.phone}`} variant="primary" size="lg" class="justify-center">
              <Icon name="phone" size="sm" />
              Call {business.phoneFormatted}
            </Button>
          </div>
          
          <div class="hidden lg:flex items-center gap-6">
            <a href={`tel:${business.phone}`} class="group flex items-center gap-3 text-white hover:text-brand-orange transition-colors">
              <span class="flex items-center justify-center w-12 h-12 rounded-full bg-brand-orange group-hover:bg-brand-orange-600 transition-colors">
                <Icon name="phone" size="md" class="text-white" />
              </span>
              <span>
                <span class="block text-sm text-brand-cream-400">Call 24/7</span>
                <span class="block font-bold text-xl tracking-tight">{business.phoneFormatted}</span>
              </span>
            </a>
          </div>
        </div>
        
        <div class="hidden lg:block lg:col-span-5">
          <LeadForm 
            variant="card"
            title={`${service.name} in ${city.name}`}
            subtitle="60-minute emergency response"
            source={`money-${citySlug}-${serviceSlug}`}
          />
        </div>
      </div>
    </div>
  </section>
  
  <TrustBar variant="light" />
  
  <!-- Main Content Slot -->
  <slot />
  
  <!-- What's Included -->
  <section class="section bg-brand-cream-200">
    <div class="container">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
          {service.name} Services in {city.name}
        </h2>
        <p class="text-lg text-brand-gray">Complete professional service from start to finish.</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {service.features.map((feature) => (
          <div class="bg-white rounded-xl p-6 shadow-soft">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-full bg-brand-orange-100 flex items-center justify-center">
                <Icon name="check-circle" size="sm" class="text-brand-orange" />
              </div>
              <span class="font-heading font-semibold text-brand-black">{feature}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Same Service in Other Cities -->
  <section class="section bg-white">
    <div class="container">
      <div class="text-center max-w-3xl mx-auto mb-10">
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
          {service.name} in Nearby Cities
        </h2>
        <p class="text-lg text-brand-gray">We also serve these North San Diego County communities.</p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 max-w-4xl mx-auto">
        {relatedCities.map((relatedCity) => (
          <a 
            href={`/service-area/${relatedCity.slug}/${serviceSlug}/`}
            class="group flex items-center gap-3 p-4 bg-brand-cream-200 rounded-lg hover:bg-brand-orange hover:text-white transition-colors"
          >
            <Icon name="map-pin" size="sm" class="text-brand-orange group-hover:text-white" />
            <span class="font-heading font-semibold text-brand-black group-hover:text-white">{relatedCity.name}</span>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <Testimonials limit={3} class="bg-brand-cream-200" />
  
  {faqs.length > 0 && (
    <FAQ 
      title={`${service.name} in ${city.name} FAQs`}
      subtitle="Common questions from local customers"
      faqs={faqs}
      showViewAll={false}
      class="bg-white"
    />
  )}
  
  <!-- Mobile Form -->
  <section class="section lg:hidden bg-white">
    <div class="container">
      <LeadForm 
        variant="card"
        title={`${service.name} in ${city.name}`}
        subtitle="60-minute emergency response"
        source={`money-${citySlug}-${serviceSlug}-mobile`}
      />
    </div>
  </section>
</BaseLayout>
