---
/**
 * Service Pillar Page Layout
 * ==========================
 * Template for /services/[service]/ pages
 * Pulls from serviceContent data for rich, consistent content
 */

import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Icon from '@/components/ui/Icon.astro';
import Button from '@/components/ui/Button.astro';
import TrustBar from '@/components/sections/TrustBar.astro';
import Testimonials from '@/components/sections/Testimonials.astro';
import FAQ from '@/components/sections/FAQ.astro';
import LeadForm from '@/components/forms/LeadForm.astro';
import { services, cities, business } from '@/data/site';
import { serviceContent } from '@/data/content';
import { getServicePillarContent } from '@/data/servicePillarContent';
import {
  getServiceTitle,
  getCanonicalUrl,
  getServiceSchema,
  getServiceBreadcrumbs,
  getBreadcrumbSchema,
  getFAQSchema,
  combineSchemas
} from '@/utils/seo';
import type { FAQ as FAQType } from '@/types';

interface Props {
  serviceSlug: string;
}

const { serviceSlug } = Astro.props;

// Get service data
const service = services.find(s => s.slug === serviceSlug)!;
const content = serviceContent[serviceSlug] || null;
const pillarContent = getServicePillarContent(serviceSlug);
const citiesServed = cities.filter(c => c.tier === 1 || c.tier === 2);
const relatedServices = services.filter(s => 
  service.relatedServices?.includes(s.slug) && s.slug !== serviceSlug
).slice(0, 3);

// Generate FAQs from content data or use defaults
const faqs: FAQType[] = [
  {
    question: `How quickly can you respond to ${service.name.toLowerCase()} emergencies?`,
    answer: `We offer 24/7 emergency service with guaranteed 60-minute response times throughout North San Diego County. Our team is always ready to help when disaster strikes.`,
  },
  {
    question: `What areas do you serve for ${service.name.toLowerCase()}?`,
    answer: `We provide ${service.name.toLowerCase()} services throughout North San Diego County, including Carlsbad, Oceanside, Vista, San Marcos, Encinitas, and surrounding communities.`,
  },
  {
    question: `Do you work with insurance for ${service.name.toLowerCase()}?`,
    answer: `Yes, we work with all major insurance carriers. We document all damage thoroughly, communicate directly with your adjuster, and help maximize your claim approval.`,
  },
  {
    question: `How much does ${service.name.toLowerCase()} cost?`,
    answer: `Costs vary based on the extent of damage and work required. We provide free on-site assessments and detailed estimates. Most homeowners use insurance to cover costs.`,
  },
  {
    question: `Are your ${service.name.toLowerCase()} technicians certified?`,
    answer: `Yes, all our technicians are IICRC certified (Institute of Inspection, Cleaning and Restoration Certification), the industry gold standard for restoration professionals.`,
  },
  {
    question: `How long does ${service.name.toLowerCase()} take?`,
    answer: `Timeline depends on the extent of damage. Minor issues may take 2-3 days, while extensive damage can take 1-2 weeks. We provide detailed timelines during our initial assessment.`,
  },
];

// SEO
const metaDescription = `Professional ${service.name.toLowerCase()} in North San Diego County. 24/7 emergency response, 60-minute arrival. IICRC certified. ${business.reviewCount} five-star reviews. Call ${business.phoneFormatted}.`;
const title = getServiceTitle(service.name);
const canonical = getCanonicalUrl(`/services/${service.slug}/`);
const breadcrumbs = getServiceBreadcrumbs(service);
const serviceSchema = getServiceSchema(service, citiesServed);
const faqSchema = getFAQSchema(faqs);
const breadcrumbSchema = getBreadcrumbSchema(breadcrumbs);
const jsonLd = combineSchemas(serviceSchema, faqSchema, breadcrumbSchema);

const bgImage = service.image || '/images/hero/truck-hero.webp';
---

<BaseLayout 
  title={title}
  description={metaDescription}
  canonical={canonical}
  jsonLd={jsonLd}
>
  <!-- Hero Section -->
  <section class="relative bg-brand-black overflow-hidden min-h-[500px] lg:min-h-[550px] flex items-center">
    <div class="absolute inset-0">
      <img 
        src={bgImage}
        alt={`Professional ${service.name.toLowerCase()} services`}
        class="w-full h-full object-cover"
        loading="eager"
        fetchpriority="high"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-brand-black/85 via-brand-black/60 to-brand-black/40"></div>
    </div>
    
    <div class="container relative py-16 lg:py-20">
      <Breadcrumbs items={breadcrumbs} variant="dark" class="mb-6" />
      
      <div class="grid lg:grid-cols-12 gap-8 lg:gap-12 items-center">
        <div class="lg:col-span-7">
          <div class="inline-flex items-center gap-2 bg-brand-orange/20 border border-brand-orange/40 text-brand-orange px-4 py-2 rounded-full text-sm font-medium mb-6 backdrop-blur-sm">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-brand-orange opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-brand-orange"></span>
            </span>
            {service.emergencyService ? '24/7 Emergency Service' : 'Professional Service'}
          </div>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-heading font-bold text-white mb-6 leading-[1.1] tracking-tight">
            Professional {service.name} in{' '}
            <span class="text-brand-orange">North San Diego County</span>
          </h1>
          
          <p class="text-brand-cream-300 text-lg lg:text-xl mb-8 max-w-xl leading-relaxed">
            {content?.heroSubtitle || service.description}
          </p>
          
          <!-- Trust Indicators -->
          <div class="flex flex-wrap items-center gap-x-6 gap-y-3 mb-8 text-sm">
            <div class="flex items-center gap-2">
              <div class="flex items-center gap-0.5">
                {[1,2,3,4,5].map(() => (
                  <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                    <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                  </svg>
                ))}
              </div>
              <span class="text-white font-semibold">{business.rating}</span>
              <span class="text-brand-cream-400">({business.reviewCount} reviews)</span>
            </div>
            <div class="flex items-center gap-2 text-brand-cream-300">
              <Icon name="award" size="sm" class="text-brand-orange" />
              <span>IICRC Certified</span>
            </div>
            {service.emergencyService && (
              <div class="flex items-center gap-2 text-brand-cream-300">
                <Icon name="clock" size="sm" class="text-brand-orange" />
                <span>60-Min Response</span>
              </div>
            )}
          </div>
          
          <!-- Mobile CTAs -->
          <div class="flex flex-col sm:flex-row gap-4 lg:hidden">
            <Button href={`tel:${business.phone}`} variant="primary" size="lg" class="justify-center">
              <Icon name="phone" size="sm" />
              Call {business.phoneFormatted}
            </Button>
          </div>
          
          <!-- Desktop Phone -->
          <div class="hidden lg:flex items-center gap-6 mt-2">
            <a href={`tel:${business.phone}`} class="group flex items-center gap-3 text-white hover:text-brand-orange transition-colors">
              <span class="flex items-center justify-center w-12 h-12 rounded-full bg-brand-orange group-hover:bg-brand-orange-600 transition-colors">
                <Icon name="phone" size="md" class="text-white" />
              </span>
              <span>
                <span class="block text-sm text-brand-cream-400">Call 24/7</span>
                <span class="block font-bold text-xl tracking-tight">{business.phoneFormatted}</span>
              </span>
            </a>
          </div>
        </div>
        
        <!-- Lead Form -->
        <div class="hidden lg:block lg:col-span-5">
          <div class="relative">
            <div class="absolute -inset-1 bg-brand-orange/20 rounded-2xl blur-xl"></div>
            <LeadForm 
              variant="card"
              title="Get Help Now"
              subtitle="60-minute emergency response"
              source={`service-${serviceSlug}`}
              class="relative"
            />
          </div>
        </div>
      </div>
    </div>
    
    <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-brand-orange via-brand-orange to-transparent"></div>
  </section>
  
  <!-- Trust Bar -->
  <TrustBar variant="light" />
  
  <!-- Problem & Solution Section -->
  {content && (
    <section class="section bg-white">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-6 text-center">
            Why {service.name} Requires Professional Attention
          </h2>
          
          <div class="prose prose-lg max-w-none mb-12">
            <p class="text-lg text-brand-gray leading-relaxed mb-6">
              {content.problemStatement}
            </p>
            <p class="text-lg text-brand-gray leading-relaxed">
              {content.solutionOverview}
            </p>
          </div>
        </div>
      </div>
    </section>
  )}
  
  <!-- Process Steps -->
  {content?.processSteps && content.processSteps.length > 0 && (
    <section class="section bg-brand-cream-200">
      <div class="container">
        <div class="text-center max-w-3xl mx-auto mb-12">
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
            Our {service.name} Process
          </h2>
          <p class="text-lg text-brand-gray">
            IICRC-certified approach to completely restore your property.
          </p>
        </div>
        
        <div class="max-w-4xl mx-auto">
          <div class="space-y-6">
            {content.processSteps.map((step, index) => (
              <div class="flex gap-6 items-start bg-white rounded-xl p-6 shadow-soft">
                <div class="flex-shrink-0 w-12 h-12 rounded-full bg-brand-orange text-white flex items-center justify-center font-heading font-bold text-xl">
                  {index + 1}
                </div>
                <div>
                  <h3 class="font-heading font-bold text-brand-black text-xl mb-2">
                    {step.title}
                  </h3>
                  <p class="text-brand-gray">
                    {step.description}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}
  
  <!-- Warning Signs & Common Causes -->
  {content && (content.warningSigns || content.commonCauses) && (
    <section class="section bg-white">
      <div class="container">
        <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
          {/* Warning Signs */}
          {content.warningSigns && content.warningSigns.length > 0 && (
            <div class="bg-brand-cream-200 rounded-2xl p-8">
              <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-12 rounded-xl bg-warning-50 flex items-center justify-center">
                  <Icon name="alert-triangle" size="lg" class="text-warning-500" />
                </div>
                <h3 class="font-heading font-bold text-brand-black text-xl">
                  Warning Signs
                </h3>
              </div>
              <p class="text-brand-gray mb-4">
                Watch for these signs that you may need {service.name.toLowerCase()}:
              </p>
              <ul class="space-y-3">
                {content.warningSigns.map((sign) => (
                  <li class="flex items-start gap-2">
                    <Icon name="alert-circle" size="sm" class="text-warning-500 mt-1 flex-shrink-0" />
                    <span class="text-brand-gray">{sign}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
          
          {/* Common Causes */}
          {content.commonCauses && content.commonCauses.length > 0 && (
            <div class="bg-brand-cream-200 rounded-2xl p-8">
              <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-12 rounded-xl bg-brand-orange-100 flex items-center justify-center">
                  <Icon name="info" size="lg" class="text-brand-orange" />
                </div>
                <h3 class="font-heading font-bold text-brand-black text-xl">
                  Common Causes
                </h3>
              </div>
              <p class="text-brand-gray mb-4">
                {service.name} is often caused by:
              </p>
              <ul class="space-y-3">
                {content.commonCauses.map((cause) => (
                  <li class="flex items-start gap-2">
                    <Icon name="chevron-right" size="sm" class="text-brand-orange mt-1 flex-shrink-0" />
                    <span class="text-brand-gray">{cause}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
      </div>
    </section>
  )}
  
  <!-- Why Choose Us -->
  {content?.whyChooseUs && content.whyChooseUs.length > 0 && (
    <section class="section bg-brand-cream-200">
      <div class="container">
        <div class="text-center max-w-3xl mx-auto mb-12">
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
            Why Choose Tamarack for {service.name}?
          </h2>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {content.whyChooseUs.map((reason) => (
            <div class="bg-white rounded-2xl p-6 shadow-soft text-center">
              <div class="w-16 h-16 rounded-2xl bg-brand-orange-100 flex items-center justify-center mx-auto mb-4">
                <Icon name="check-circle" size="lg" class="text-brand-orange" />
              </div>
              <h3 class="font-heading font-bold text-brand-black text-xl mb-3">
                {reason.title}
              </h3>
              <p class="text-brand-gray">
                {reason.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}
  
  <!-- When to Call Section -->
  {pillarContent?.whenToCall && pillarContent.whenToCall.length > 0 && (
    <section class="section bg-white">
      <div class="container">
        <div class="text-center max-w-3xl mx-auto mb-12">
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
            When to Call for {service.name}
          </h2>
          <p class="text-lg text-brand-gray">
            Recognize these situations? Call Tamarack at {business.phoneFormatted} for immediate help.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-4 max-w-5xl mx-auto">
          {pillarContent.whenToCall.map((scenario) => (
            <div class="bg-brand-cream-200 rounded-xl p-6 border-l-4 border-brand-orange">
              <h3 class="font-heading font-bold text-brand-black text-lg mb-2">
                {scenario.title}
              </h3>
              <p class="text-brand-gray text-sm leading-relaxed">
                {scenario.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- What's Included â€” Detailed -->
  {pillarContent?.whatsIncluded && pillarContent.whatsIncluded.length > 0 ? (
    <section class="section bg-brand-cream-200">
      <div class="container">
        <div class="text-center max-w-3xl mx-auto mb-12">
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
            What's Included in Our {service.name} Service
          </h2>
          <p class="text-lg text-brand-gray">
            Detailed breakdown of our professional process, equipment, and timeline.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
          {pillarContent.whatsIncluded.map((item) => (
            <div class="bg-white rounded-xl p-6 shadow-soft">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-xl bg-brand-orange-100 flex items-center justify-center flex-shrink-0 mt-1">
                  <Icon name="check-circle" size="md" class="text-brand-orange" />
                </div>
                <div>
                  <h3 class="font-heading font-bold text-brand-black text-lg mb-2">
                    {item.title}
                  </h3>
                  <p class="text-brand-gray text-sm leading-relaxed mb-2">
                    {item.description}
                  </p>
                  {item.equipment && (
                    <p class="text-xs text-brand-gray-400 italic">
                      Equipment: {item.equipment}
                    </p>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  ) : (
    <section class="section bg-white">
      <div class="container">
        <div class="text-center max-w-3xl mx-auto mb-12">
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
            What's Included in Our {service.name} Service
          </h2>
          <p class="text-lg text-brand-gray">
            Complete, professional service from start to finish.
          </p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {service.features.map((feature) => (
            <div class="bg-brand-cream-200 rounded-xl p-6">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-brand-orange-100 flex items-center justify-center">
                  <Icon name="check-circle" size="sm" class="text-brand-orange" />
                </div>
                <span class="font-heading font-semibold text-brand-black">{feature}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}
  
  <!-- Service Highlights -->
  {content?.serviceHighlights && content.serviceHighlights.length > 0 && (
    <section class="section bg-brand-cream-200">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <div class="bg-white rounded-2xl p-8 shadow-soft">
            <h3 class="font-heading font-bold text-brand-black text-xl mb-6 text-center">
              Why Our {service.name} Stands Out
            </h3>
            <div class="grid sm:grid-cols-2 gap-4">
              {content.serviceHighlights.map((highlight) => (
                <div class="flex items-center gap-3 p-3 bg-brand-cream-200 rounded-lg">
                  <Icon name="star" size="sm" class="text-brand-orange flex-shrink-0" />
                  <span class="text-brand-gray font-medium">{highlight}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )}
  
  <!-- Recent Projects -->
  {pillarContent?.recentProjects && pillarContent.recentProjects.length > 0 && (
    <section class="section bg-white">
      <div class="container">
        <div class="text-center max-w-3xl mx-auto mb-12">
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
            Recent {service.name} Projects
          </h2>
          <p class="text-lg text-brand-gray">
            Real restoration work from homes across North San Diego County.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {pillarContent.recentProjects.map((project) => (
            <div class="bg-brand-cream-200 rounded-2xl overflow-hidden">
              <div class="aspect-video bg-brand-cream-300 flex items-center justify-center">
                <div class="text-center p-4">
                  <Icon name="image" size="lg" class="text-brand-gray-400 mx-auto mb-2" />
                  <span class="text-xs text-brand-gray-400">Project photo coming soon</span>
                </div>
              </div>
              <div class="p-6">
                <h3 class="font-heading font-bold text-brand-black text-lg mb-1">
                  {project.title}
                </h3>
                <p class="text-brand-orange text-sm font-medium mb-3">
                  {project.location}
                </p>
                <p class="text-brand-gray text-sm leading-relaxed mb-3">
                  {project.summary}
                </p>
                <p class="text-xs text-brand-gray-400 font-medium">
                  Scope: {project.scope}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Expert Deep Dive -->
  {pillarContent?.deepDiveContent && (
    <section class="section bg-brand-cream-200">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-8 text-center">
            {pillarContent.deepDiveTitle}
          </h2>
          <div class="prose prose-lg max-w-none">
            {pillarContent.deepDiveContent.split('\n\n').map((paragraph) => (
              <p class="text-brand-gray leading-relaxed mb-6">
                {paragraph}
              </p>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Cities Served -->
  <section class="section bg-white">
    <div class="container">
      <div class="text-center max-w-3xl mx-auto mb-10">
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
          {service.name} Throughout North San Diego County
        </h2>
        <p class="text-lg text-brand-gray">
          We provide {service.name.toLowerCase()} services to homes and businesses across the region.
        </p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 max-w-5xl mx-auto">
        {citiesServed.map((city) => (
          <a 
            href={`/service-area/${city.slug}/${serviceSlug}/`}
            class="group flex items-center gap-3 p-4 bg-brand-cream-200 rounded-lg hover:bg-brand-orange hover:text-white transition-colors"
          >
            <Icon name="map-pin" size="sm" class="text-brand-orange group-hover:text-white flex-shrink-0" />
            <span class="font-heading font-semibold text-brand-black group-hover:text-white">
              {city.name}
            </span>
            <Icon name="arrow-right" size="sm" class="ml-auto text-brand-gray group-hover:text-white" />
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Testimonials -->
  <Testimonials limit={3} class="bg-brand-cream-200" />
  
  <!-- Related Services -->
  {relatedServices.length > 0 && (
    <section class="section bg-white">
      <div class="container">
        <div class="text-center max-w-3xl mx-auto mb-10">
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-brand-black mb-4">
            Related Services
          </h2>
          <p class="text-lg text-brand-gray">
            We provide comprehensive restoration for all your needs.
          </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
          {relatedServices.map((relatedService) => (
            <a 
              href={`/services/${relatedService.slug}/`}
              class="group bg-white border border-brand-cream-300 rounded-xl p-6 hover:border-brand-orange hover:shadow-card transition-all"
            >
              <div class="flex items-center gap-3 mb-4">
                <div class="w-12 h-12 rounded-xl bg-brand-orange-100 text-brand-orange flex items-center justify-center group-hover:bg-brand-orange group-hover:text-white transition-colors">
                  <Icon name={relatedService.icon} size="lg" />
                </div>
                <h3 class="font-heading font-bold text-lg text-brand-black group-hover:text-brand-orange transition-colors">
                  {relatedService.name}
                </h3>
              </div>
              <p class="text-brand-gray text-sm mb-4">
                {relatedService.shortDescription}
              </p>
              <span class="inline-flex items-center gap-1 text-brand-orange font-semibold text-sm">
                Learn More
                <Icon name="arrow-right" size="sm" />
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}
  
  <!-- FAQ -->
  <FAQ 
    title={`${service.name} FAQs`}
    subtitle={`Common questions about ${service.name.toLowerCase()}`}
    faqs={faqs}
    showViewAll={false}
    class="bg-brand-cream-200"
  />
  
  <!-- Mobile Lead Form -->
  <section class="section lg:hidden bg-white">
    <div class="container">
      <LeadForm 
        variant="card"
        title="Get Help Now"
        subtitle="60-minute emergency response"
        source={`service-${serviceSlug}-mobile`}
      />
    </div>
  </section>
</BaseLayout>
